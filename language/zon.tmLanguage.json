{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "zon",
    "scopeName": "source.zon",
    "patterns": [
        { "include": "#null" },
        { "include": "#bool" },
        { "include": "#number" },
        { "include": "#string" },
        { "include": "#identifier" }
    ],
    "repository": {
        "null": {
            "name": "keyword",
            "match": "null"
        },
        "bool": {
            "name": "keyword",
            "match": "(true|false)"
        },
        "number": {
            "name": "constant.numeric",
            "match": "-?(?:0|[1-9]\\d*)(?:\\.\\d+)?(?:[eE][+-]?\\d+)?"
        },
        "string": {
            "name": "string",
            "begin": "\"",
            "end": "\""
        },
        "identifier": {
            "name": "variable.other.property",
            "match": "(\\.[a-zA-Z0-9_]+)|(@\".*?\")"
        }
    }
}
