{
    "name": "cubyz-dev-kit",
    "displayName": "Cubyz Dev Kit",
    "description": "Collection of tools helpful for Cubyz asset development.",
    "author": "Argmaster",
    "license": "GPL-3.0",
    "version": "0.0.2",
    "repository": {
        "type": "git",
        "url": "https://github.com/Argmaster/cubyz-dev-kit-vscode"
    },
    "publisher": "Argmaster",
    "categories": [],
    "keywords": [
        "Cubyz"
    ],
    "icon": "assets/logo.png",
    "engines": {
        "vscode": "^1.90.0"
    },
    "activationEvents": [
        "onLanguage:zig",
        "onLanguage:plaintext"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "zon",
                "aliases": [
                    "Zig Object Notation",
                    "Zon",
                    "zig",
                    "Zig"
                ],
                "extensions": [
                    ".zon",
                    ".zig.zon"
                ],
                "configuration": "./language/configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "zon",
                "scopeName": "source.zon",
                "path": "./language/zon.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "cubyz_dev_kit.buildDebug",
                "title": "Cubyz Dev Kit: Build Debug"
            },
            {
                "command": "cubyz_dev_kit.buildReleaseSafe",
                "title": "Cubyz Dev Kit: Build Release Safe"
            },
            {
                "command": "cubyz_dev_kit.formatFile",
                "title": "Cubyz Dev Kit: Format Document"
            },
            {
                "command": "cubyz_dev_kit.formatAll",
                "title": "Cubyz Dev Kit: Format All Documents"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Cubyz Dev Kit",
            "properties": {
                "cubyzDevKit.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "cubyzDevKit.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@stylistic/eslint-plugin": "^2.9.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20",
        "eslint": "^9.13.0",
        "mocha": "^10.3.0",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.26.0"
    }
}
